<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
    <Button
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/DDC_fanhui"
        android:layout_gravity="bottom"
        android:background="@drawable/ic_keyboard_arrow_left_black_24dp"/>
    <LinearLayout
        android:elevation="30dp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="40dp"
        android:background="#efefec"
        android:orientation="vertical"
        android:padding="30dp"
        >

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="50dp">
            <TextView
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:id="@+id/DDC_Tdanci"
                android:text="输入您想删除的单词："
                android:textSize="25dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="20dp"></LinearLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="50dp">
            :
            <EditText
                android:id="@+id/DDC_danci"
                android:layout_width="160dp"
                android:layout_height="50dp"

                android:maxLength="20"
                android:drawable="@drawable/color_cursor"
                android:cursorVisible="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RadioGroup
                android:id="@+id/DDC_zu"
                android:layout_width="150dp"
                android:layout_height="150dp">
                <RadioButton
                    android:id="@+id/DDC_siji"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="四级词库"
                    android:textSize="20dp" />
                <RadioButton
                    android:id="@+id/DDC_liuji"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="六级词库"
                    android:textSize="20dp"/>
            </RadioGroup>




        </LinearLayout>
            <Button
            android:id="@+id/DDC_shanchu"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:text="删除"
            android:textSize="20dp"
            android:background="@drawable/btn_bg_red" />
    </LinearLayout>







    </LinearLayout>

</LinearLayout>
