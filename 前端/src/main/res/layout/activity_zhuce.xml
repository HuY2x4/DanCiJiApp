<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_zhuce"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#f8f8ff"
    android:gravity="center"
    tools:context="com.example.danciji1_0.Zhuce">
<LinearLayout
    android:elevation="30dp"
    android:layout_width="300dp"
    android:layout_height="500dp"
    android:orientation="vertical"

    android:layout_marginTop="20dp"
    android:background="#efefec"
    android:paddingTop="20dp"
    android:paddingLeft="20dp">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/ZC_Tzhanghao"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="账号"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/ZC_zhanghao"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:drawable="@drawable/color_cursor"
            android:cursorVisible="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/ZC_Tmima1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="密码"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/ZC_mima1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:inputType="textPassword"
            android:maxLength="20"
            android:drawable="@drawable/color_cursor"
            android:cursorVisible="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/ZC_Tmima2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认密码"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/ZC_mima2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:inputType="textPassword"
            android:maxLength="20"
            android:drawable="@drawable/color_cursor"
            android:cursorVisible="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/ZC_Tnumber"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="手机号"
            android:textSize="20dp"/>
        <EditText
            android:inputType="phone"
            android:id="@+id/ZC_number"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:drawable="@drawable/color_cursor"
            android:cursorVisible="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/verification_code"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="验证码"
            android:textSize="15dp"
            android:gravity="center"/>
        <Button

            android:background="@drawable/btn_bg_red"
            android:id="@+id/button_send_verification_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码" />
    </LinearLayout>


        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:gravity="left">

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:layout_marginTop="0dp">
                <TextView
                    android:id="@+id/ZC_Tciku"
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:padding="10dp"
                    android:text="选择词库："
                    android:textSize="20dp"/>
            </LinearLayout>


            <RadioGroup
                android:id="@+id/ZC_zu"
                android:layout_width="200dp"
                android:layout_height="150dp">
            <RadioButton
                android:id="@+id/ZC_siji"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="四级词库"
                android:textSize="15dp" />
            <RadioButton
                android:id="@+id/ZC_liuji"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="六级词库"
                android:textSize="15dp"/>
            </RadioGroup>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:layout_marginTop="10dp"
                android:elevation="50dp"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:id="@+id/ZC_denglu"
                android:background="@drawable/btn_bg_red"
                android:text="注册"
                android:textSize="20dp"

                />



        </LinearLayout>



</LinearLayout>

</RelativeLayout>
