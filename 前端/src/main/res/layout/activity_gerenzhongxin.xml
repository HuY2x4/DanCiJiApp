<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gerenzhongxin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.danciji1_0.Gerenzhongxin"
    android:background="#f8f8ff">
    <Button
        android:id="@+id/GRZX_fanhui"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_keyboard_arrow_left_black_24dp"/>

    <LinearLayout
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/GRZX_biaoti"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="70dp"
            android:gravity="center"
            android:text="档案中心"
            android:textSize="40dp"/>
        <LinearLayout
            android:elevation="30dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#efefec"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/GRZX_Tzhanghao"
                    android:gravity="center"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="20dp"
                    android:text="账号："
                    android:textSize="20dp"
                    android:drawable="@drawable/color_cursor"
                    android:cursorVisible="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/GRZX_zhanghao"
                    android:text="未登录！！"
                    android:textSize="30dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/GRZX_Tnumber"
                    android:gravity="center"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="20dp"
                    android:text="手机号："
                    android:textSize="20dp"
                    android:drawable="@drawable/color_cursor"
                    android:cursorVisible="true"/>
                <EditText
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:id="@+id/GRZX_number"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="130dp">
                <TextView
                    android:id="@+id/GRZX_Tciku"
                    android:gravity="center"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="20dp"
                    android:text="当前词库："
                    android:textSize="20dp"
                    android:drawable="@drawable/color_cursor"
                    android:cursorVisible="true"/>



                <RadioGroup
                    android:id="@+id/GRZX_zu"
                    android:layout_width="200dp"
                    android:layout_height="130dp">
                    <RadioButton
                        android:id="@+id/GRZX_siji"
                        android:layout_marginTop="12dp"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:text="四级词库"
                        android:textSize="20dp" />
                    <RadioButton
                        android:id="@+id/GRZX_liuji"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:text="六级词库"
                        android:textSize="20dp"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <TextView
                        android:id="@+id/GRZX_TkanciZF"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:text="看词选意总分："
                        android:textSize="20dp"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/GRZX_kanciZF"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:textSize="20dp"
                        android:gravity="center"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <TextView
                        android:id="@+id/GRZX_TkanyiZF"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:text="看意选词总分："
                        android:textSize="20dp"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/GRZX_kanyiZF"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:textSize="20dp"
                        android:gravity="center"/>


                </LinearLayout>



            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_marginTop="40dp">
                <Button
                    android:id="@+id/GRZX_zhuxiao"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="注销"
                    android:textSize="20dp"
                    android:background="@drawable/btn_bg_red"/>
                <Button
                    android:id="@+id/GRZX_gaimima"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_bg_red"
                    android:text="修改密码"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <Button
                    android:id="@+id/GRZX_tijiao"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_bg_red"
                    android:text="确认修改"
                    android:textSize="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
