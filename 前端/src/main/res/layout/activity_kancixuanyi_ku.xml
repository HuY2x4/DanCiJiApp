<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_kancixuanyi_ku"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.danciji1_0.Kancixuanyi_ku">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/ic_keyboard_arrow_left_black_24dp"
                android:id="@+id/kanciXCK_fanhui" />
            <TextView

                android:layout_width="250dp"
                android:layout_height="50dp"
                android:id="@+id/kanciXCK_biaoti"
                android:background="#efefec"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="请选择您想记忆的单词库"
                android:textSize="20dp"
                android:textColor="#111111"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp">

            <Button
                android:id="@+id/kanciXCK_point"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_bg_red"
                android:gravity="center"
                android:text="重点词库"
                android:textSize="25dp"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/kanciXCK_chenji"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_bg_red"
                android:gravity="center"
                android:text="查看成绩"
                android:textSize="25dp"
                android:textColor="#000000"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <Button
                    android:id="@+id/kanciXCK_ck1"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:text="1"
                    android:textSize="17dp"/>
                <Button
                    android:id="@+id/kanciXCK_ck2"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="2"
                    android:textSize="17dp"/>
                <Button
                    android:id="@+id/kanciXCK_ck3"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="3"
                    android:textSize="17dp"/>
                <Button
                    android:id="@+id/kanciXCK_ck4"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="4"
                    android:textSize="17dp"/>
                <Button
                    android:id="@+id/kanciXCK_ck5"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="5"
                    android:textSize="17dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <Button
                    android:id="@+id/kanciXCK_ck6"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:text="6"
                    android:textSize="17dp"/>
                <Button
                    android:id="@+id/kanciXCK_ck7"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="7"
                    android:textSize="17dp"/>
                <Button
                    android:id="@+id/kanciXCK_ck8"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="8"
                    android:textSize="17dp"/>
                <Button
                    android:id="@+id/kanciXCK_ck9"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="9"
                    android:textSize="17dp"/>
                <Button
                    android:id="@+id/kanciXCK_ck10"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="10"
                    android:textSize="17dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <Button
                    android:id="@+id/kanciXCK_ck11"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:text="11"
                    android:textSize="17dp"/>
                <Button
                    android:id="@+id/kanciXCK_ck12"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="12"
                    android:textSize="17dp"/>
                <Button
                    android:id="@+id/kanciXCK_ck13"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="13"
                    android:textSize="17dp"/>
                <Button
                    android:id="@+id/kanciXCK_ck14"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="14"
                    android:textSize="17dp"/>
                <Button
                    android:id="@+id/kanciXCK_ck15"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="15"
                    android:textSize="17dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <Button
                    android:id="@+id/kanciXCK_ck16"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:text="16"
                    android:textSize="17dp"/>
                <Button
                    android:id="@+id/kanciXCK_ck17"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="17"
                    android:textSize="17dp"/>
                <Button
                    android:id="@+id/kanciXCK_ck18"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="18"
                    android:textSize="17dp"/>
                <Button
                    android:id="@+id/kanciXCK_ck19"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="19"
                    android:textSize="17dp"/>
                <Button
                    android:id="@+id/kanciXCK_ck20"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="20"
                    android:textSize="17dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:gravity="center">
                <Button
                    android:id="@+id/kanciXCK_shang"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_bg_red"
                    android:text="上一页"
                    android:textSize="25dp"
                    android:textColor="#000000"/>
                <Button
                    android:id="@+id/kanciXCK_xia"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="60dp"
                    android:background="@drawable/btn_bg_red"
                    android:text="下一页"
                    android:textSize="25dp"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/kanciXCK_count"
        android:text="3"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="@drawable/circle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="130dp"
        android:visibility="invisible"/>

</RelativeLayout>
