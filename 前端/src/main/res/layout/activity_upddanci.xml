<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <Button
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:id="@+id/UDC_fanhui"
        android:layout_gravity="bottom"
        android:background="@drawable/ic_keyboard_arrow_left_black_24dp"/>
    <LinearLayout
        android:elevation="30dp"
        android:layout_width="300dp"
        android:layout_height="430dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:background="#efefec"
        android:orientation="vertical"
        android:padding="20dp"
        >

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="90dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:id="@+id/UDC_Tdanci"
                android:text="输入您想修改的单词："
                android:textSize="25dp" />
            <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:id="@+id/UDC_danci"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="90dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:id="@+id/UDC_Tyisi"
                android:text="输入您单词的意思："
                android:textSize="25dp" />
            <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:id="@+id/UDC_yisi"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="90dp"
            android:orientation="vertical">



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <RadioGroup
                    android:id="@+id/UDC_zu"
                    android:layout_width="150dp"
                    android:layout_height="150dp">
                    <RadioButton
                        android:id="@+id/UDC_siji"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:text="四级词库"
                        android:textSize="20dp" />
                    <RadioButton
                        android:id="@+id/UDC_liuji"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:text="六级词库"
                        android:textSize="20dp"/>
                </RadioGroup>




            </LinearLayout>
            <Button
                android:id="@+id/UDC_xiugai"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginTop="60dp"
                android:text="修改"
                android:textSize="20dp"
                android:background="@drawable/btn_bg_red" />
        </LinearLayout>







    </LinearLayout>

</LinearLayout>
