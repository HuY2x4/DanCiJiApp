<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_kancixuanyi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.danciji1_0.Kancixuanyi">
    <Button
        android:id="@+id/kanciGN_zhuye"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:background="@drawable/ic_keyboard_arrow_left_black_24dp"
        android:layout_marginTop="10dp"

        android:gravity="bottom" />
    <TextView
        android:id="@+id/kanciGN_number"
        android:layout_width="70dp"
        android:layout_height="200dp"
        android:background="@drawable/textview"
        android:layout_marginTop="-130dp"
        android:layout_marginLeft="260dp"
        android:padding="20dp"
        android:gravity="bottom"
        android:text="12"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/kanciGN_danci"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="70dp"
        android:background="@drawable/textview2"
        android:padding="1dp"
        android:gravity="center"
        android:text="n.apple"
        android:textSize="20dp"
        android:textColor="#111111"/>
    <Button
        android:id="@+id/kanciGN_voice"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="300dp"
        android:background="@drawable/voice"/>  //语音按钮
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="160dp"
        android:background="#efefec"
        android:orientation="vertical">
        <LinearLayout
            android:elevation="30dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/kanciGN_A_jieshi"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:background="#ffffff"
                    android:textSize="15dp"
                    android:text="siahdia"
                    android:textColor="#111111"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/kanciGN_B_jieshi"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="50dp"
                    android:background="#ffffff"
                    android:textSize="15dp"
                    android:text="B:asfa"
                    android:textColor="#111111"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:layout_marginTop="10dp">
                <Button
                    android:textAllCaps="false"
                    android:id="@+id/kanciGN_A"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:background="#ffffff"
                    android:textSize="15dp"
                    android:text="A:发顺丰"
                    android:textColor="#111111"/>
                <Button
                    android:textAllCaps="false"
                    android:id="@+id/kanciGN_B"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:background="#ffffff"
                    android:textSize="15dp"
                    android:text="B:是的感受到"
                    android:textColor="#111111"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:layout_marginTop="25dp">
                <Button
                    android:textAllCaps="false"
                    android:id="@+id/kanciGN_C"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:background="#ffffff"
                    android:textSize="15dp"
                    android:text="C:第三个是的粉色发发发"
                    android:textColor="#111111"/>
                <Button
                    android:textAllCaps="false"
                    android:id="@+id/kanciGN_D"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="50dp"
                    android:background="#ffffff"
                    android:textSize="15dp"
                    android:text="D:十多个水电费水电费第三方"
                    android:textColor="#111111"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginTop="10dp">
                <TextView
                    android:gravity="center"
                    android:id="@+id/kanciGN_C_jieshi"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:background="#ffffff"
                    android:textSize="15dp"
                    android:text="siahdia"
                    android:textColor="#111111"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/kanciGN_D_jieshi"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="50dp"
                    android:background="#ffffff"
                    android:textSize="15dp"
                    android:text="B:asfa"
                    android:textColor="#111111"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/kanciGN_shang"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="#ffffff"
                android:text="上一页"
                android:textSize="20dp"
                android:textColor="#000000"/>
            <Button
                android:id="@+id/kanciGN_mark"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:text="mark"
                android:background="#aca4a4" />
            <Button
                android:id="@+id/kanciGN_xia"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="#ffffff"
                android:text="下一页"
                android:textSize="20dp"
                android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
