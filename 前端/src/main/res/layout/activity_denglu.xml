<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_denglu"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#f8f8ff"
    android:gravity="center"
    tools:context="com.example.danciji1_0.Denglu"
    android:orientation="horizontal">
    <LinearLayout
        android:elevation="30dp"
        android:orientation="vertical"

        android:layout_width="300dp"
        android:layout_height="400dp"

        android:background="#efefec"
        android:paddingTop="80dp"
        android:paddingLeft="35dp">

        <LinearLayout
            android:background="@drawable/shape_corner_up"
            android:layout_width="230dp"
            android:layout_height="50dp">

            <EditText
                android:hint="     请输入账号"
                android:id="@+id/DL_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="text"
                android:maxLength="20"
                android:background="@null"
                android:typeface="serif"
                android:cursorVisible="true" />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/shape_corner_down"
            android:layout_width="230dp"
            android:layout_height="50dp">
            <EditText
                android:background="@null"
                android:hint="  请输入密码"
                android:id="@+id/DL_mima"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:maxLength="20"
                android:typeface="serif"
                android:cursorVisible="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="50dp">
            <CheckBox
                android:id="@+id/remember_key"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="记住密码"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent" />
            <CheckBox
                android:id="@+id/automatic_login"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="自动登录"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="50dp">

            <Button
                android:elevation="50dp"
                android:id="@+id/DL_zhuce"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="注册"
                android:textSize="15dp"
                android:background="@drawable/btn_bg_red" />
            <TextView
                android:layout_width="40dp"
                android:layout_height="1dp" />
            <Button
                android:elevation="60dp"
                android:id="@+id/DL_denglu"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="登录"
                android:textSize="15dp"
                android:background="@drawable/btn_bg_red" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"></LinearLayout>
        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="50dp"
            >
            <Button
                android:id="@+id/DL_miandenglu"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="免登录试用"
                android:textSize="20dp"
                android:layout_marginLeft="60dp"
                android:background="#00ffffff"
                android:textColor="#807880" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

